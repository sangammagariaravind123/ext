pipeline {
    agent any
    environment {
        PYTHON_HOME = 'C:/Users/sanga/AppData/Local/Programs/Python/Python311/python.exe'
        PATH = "${PYTHON_HOME};${env.PATH}"
    }
    stages {
        stage('Check Python Version') {
            steps {
                script {
                    bat '"C:/Users/sanga/AppData/Local/Programs/Python/Python311/python.exe" --version'
                }
            }
        }
        stage('Run Addition Script') {
            steps {
                script {
                    bat '"C:/Users/sanga/AppData/Local/Programs/Python/Python311/python.exe" addition.py'
                }
            }
        }
        stage('Save output to File') {
            steps {
                script {
                    bat '"C:/Users/sanga/AppData/Local/Programs/Python/Python311/python.exe" addition.py > output.txt'
                }
            }
        }
        stage('Docker build') {
            steps {
                script {
                    bat '"C:/Program Files/Docker/Docker/resources/bin/docker.exe" build -f Dockerfile -t aravindchandra/px:local .'
                }
            }
        }
        stage('List the images') {
            steps {
                script {
                    bat '"C:/Program Files/Docker/Docker/resources/bin/docker.exe" images'
                }
            }
        }
        stage('Tag the image') {
            steps {
                script {
                    bat '"C:/Program Files/Docker/Docker/resources/bin/docker.exe" tag aravindchandra/px:local aravindchandra/px:latest'
                }
            }
        }
        stage('Save output to File') {
            steps {
                script {
                    bat '"C:/Program Files/Docker/Docker/resources/bin/docker.exe" run aravindchandra/px:latest > docker_output.txt'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
        }
    }
}