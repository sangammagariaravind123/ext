pipeline {
    agent any
    
    stages {
        stage('Check Python Version') {
            steps {
                script {
                    bat 'python3 --version'
                }
            }
        }
        stage('Run Addition Script') {
            steps {
                script {
                    bat 'python3 addition.py'
                }
            }
        }
        stage('Save output to File') {
            steps {
                script {
                    bat 'python3 addition.py > output.txt'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
        }
    }
}