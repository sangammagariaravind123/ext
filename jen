pipeline {
    agent any
    environment {
        PYTHON_HOME = 'C:/Users/sanga/AppData/Local/Programs/Python/Python311/python.exe'
        PATH = "${PYTHON_HOME};${env.PATH}"
    }
    stages {
        stage('Check Python Version') {
            steps {
                script {
                    bat '"C:/Users/sanga/AppData/Local/Programs/Python/Python311/python.exe" --version'
                }
            }
        }
        stage('Run Addition Script') {
            steps {
                script {
                    bat '"C:/Users/sanga/AppData/Local/Programs/Python/Python311/python.exe" addition.py'
                }
            }
        }
        stage('Save output to File') {
            steps {
                script {
                    bat '"C:/Users/sanga/AppData/Local/Programs/Python/Python311/python.exe" addition.py > output.txt'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
        }
    }
}